<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TriangleView">
        <!--  三角形   -->
        <attr name="trv_color" format="color" />
        <attr name="trv_direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="right" value="2" />
            <enum name="left" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ZUITextView">
        <attr name="zui_drawableWidth" />
        <attr name="zui_drawableHeight" />
        <attr name="zui_drawableSize" />
        <attr name="zui_drawablePaddingStart" />
        <attr name="zui_drawablePaddingTop" />
        <attr name="zui_drawablePaddingEnd" />
        <attr name="zui_drawablePaddingBottom" />
    </declare-styleable>
    <declare-styleable name="ZUIMaterialButton">
        <attr name="zui_drawableWidth" />
        <attr name="zui_drawableHeight" />
        <attr name="zui_drawableSize" />
        <attr name="zui_drawablePaddingStart" />
        <attr name="zui_drawablePaddingTop" />
        <attr name="zui_drawablePaddingEnd" />
        <attr name="zui_drawablePaddingBottom" />
    </declare-styleable>


    <declare-styleable name="ZUIImageButton">
        <attr name="zui_press_effect" />
    </declare-styleable>


    <declare-styleable name="ToolMenuView">
        <attr name="leftDrawable" format="dimension" />
        <attr name="leftDrawableWidth" format="dimension" />
        <attr name="leftDrawableHeight" format="dimension" />

        <attr name="rightDrawable" format="dimension" />
        <attr name="rightDrawableWidth" format="dimension" />
        <attr name="rightDrawableHeight" format="dimension" />

        <attr name="showDivider" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BorderCircleView">
        <attr name="circleColor" format="color" />
        <attr name="circleRadius" format="dimension" />
        <!-- 环形的边，内圆的空隙  -->
        <attr name="space" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="showCircle" format="boolean" />
        <attr name="showBorder" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="HVScrollView">
        <!--水平内容宽度是否充满，默认false自适应-->
        <attr name="fillViewportH" format="boolean" />
        <!--垂直内容高度是否充满，默认false自适应-->
        <attr name="fillViewportV" format="boolean" />
        <!--滚动方向，默认both双向滚动-->
        <attr name="scrollOrientation">
            <enum name="none" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="vertical" value="2" />
            <enum name="both" value="3" />
        </attr>
        <!--内容是否居中显示，默认右上角对齐-->
        <attr name="childLayoutCenter" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress" format="integer" />
        <attr name="progressbarColor" format="color" />
        <attr name="progressBarThickness" format="dimension" />

    </declare-styleable>
</resources>