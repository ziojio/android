<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryColor"
        app:titleTextColor="@color/primaryColor" />

    <Button
        android:id="@+id/button_sql_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sql_insert" />

    <Button
        android:id="@+id/button_sql_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sql_query" />


    <Button
        android:id="@+id/button_room_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="room_insert" />

    <Button
        android:id="@+id/button_room_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="room_query" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转" />
    <Button
        android:id="@+id/button_start_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转 to Test" />

    <Button
        android:id="@+id/button_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button_webview" />


    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:textSize="16sp" />
</LinearLayout>