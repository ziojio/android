<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- style为单继承，parent方式优先级高于前缀继承，同时存在时，前缀的作用只作为名字，不继承前缀样式 -->

    <style name="RootTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="BaseTheme" parent="RootTheme">

    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimAmount">?attr/zui_dialog_windowBackground_dimAmount</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item> <!-- 在中间弹框、背后有遮罩的效果 -->
    </style>

    <style name="BaseMaterialTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- 自定义的属性值在 ZUI 开头的 Theme 里设置默认值 -->
    <style name="ZUI" parent="BaseTheme">
        <item name="zui_disabled_alpha">0.5</item>
        <item name="zui_press_alpha">0.75</item>
        <item name="zui_press_backgroundTintColor">@color/zui_color_black_10</item>

        <item name="android:textColorPrimary">@color/zui_color_text_black</item>

        <item name="android:textAppearance">@style/ZUI.TextAppearance</item>
        <item name="android:textViewStyle">@style/ZUI.TextStyle</item>
        <item name="android:buttonStyle">@style/ZUI.ButtonStyle</item>

        <item name="editTextStyle">@style/ZUI.EditTextStyle</item>

    </style>

    <style name="ZUI.Dialog" parent="BaseDialog">
        <item name="zui_disabled_alpha">0.5</item>
        <item name="zui_press_alpha">0.75</item>
        <item name="zui_dialog_windowBackground_dimAmount">0.5</item>
    </style>

    <style name="ZUI.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="android:textAllCaps">false</item>-->
    </style>

    <style name="ZUI.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">#55000000</item>
        <item name="android:textAppearance">@style/ZUI.TextAppearance</item>
        <item name="android:background">@drawable/shape_round_rect_5dp_white</item>
    </style>

    <style name="ZUI.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/ZUI.TextAppearance</item>
    </style>

    <style name="ZUI.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:gravity">center</item>-->
        <!--去掉5.0下Button点击的阴影动画效果-->
        <!--<item name="android:stateListAnimator">@null</item>-->
    </style>

    <style name="ZUI.ButtonStyle.Radius5">
        <item name="zui_cornerRadius">5dp</item>
        <item name="zui_backgroundColor">@color/zui_color_white_10</item>
    </style>

    <style name="ZUI.ButtonStyle.RadiusAuto">
        <item name="zui_backgroundColor">@color/zui_color_white_10</item>
        <item name="zui_isAutoAdjustRoundSize">true</item>
    </style>


</resources>