<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAllCaps">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="actionBarStyle">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAllCaps">false</item>

    </style>

    <style name="BaseMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="divider_weight_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="divider_weight_2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="divider_line_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="divider_line_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

</resources>