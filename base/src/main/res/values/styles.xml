        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="divider_weight_2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
