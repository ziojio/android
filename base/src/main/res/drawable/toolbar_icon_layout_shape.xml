<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/mp_toolbar_bg_press" />
            <stroke android:width="1px" android:color="@color/mp_toolbar_bg_press" />
            <corners android:radius="@dimen/mp_toolbar_height_half" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/mp_toolbar_bg" />
            <stroke android:width="1px" android:color="@color/mp_toolbar_bg_press" />
            <corners android:radius="@dimen/mp_toolbar_height_half" />
        </shape>
    </item>
</selector>





